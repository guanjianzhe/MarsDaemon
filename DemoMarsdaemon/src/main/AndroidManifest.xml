<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marswin89.marsdaemon.demo">

    <!-- 危险权限：动态弹窗询问获取权限start -->
    <!-- 使用相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 使用麦克风 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- SD卡读写 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 危险权限：动态弹窗询问获取权限end -->


    <!-- 一般权限：默认授权start -->
    <!-- 获取联网状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 访问Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 保持亮屏 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 手机震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 监听系统开机广播权限:自动重启相关 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 一般权限：默认授权end -->


    <!-- 特殊权限start -->
    <!-- Window相关权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 特殊权限end -->


    <!-- 产品特色 -->
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".MyApplication2"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.marswin89.marsdaemon.demo.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 守护进程 -->
        <service android:name=".DaemonService" />
        <!-- 守护进程receiver -->
        <receiver android:name=".DaemonReceiver" />

        <!-- 守护辅助进程 -->
        <service
            android:name=".AssistService"
            android:process=":process2" />
        <!-- 守护辅助进程receiver -->
        <receiver
            android:name=".AssistReceiver"
            android:process=":process2" />

        <!-- 任务服务，必须配置在主常驻进程里 -->
        <service
            android:name="com.marswin89.marsdaemon.JobSchedulerService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <!-- 开机自动重启Receiver，进程名称要和被守护的进程一致 -->
        <receiver android:name="com.marswin89.marsdaemon.BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <!-- WIFI状态变化 -->
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
            <intent-filter android:priority="999">

                <!-- 网络连接变化 -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <!-- 开机广播 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 解锁完成后会调用 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <!-- 壁纸变化 -->
                <action android:name="android.intent.action.WALLPAPER_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter android:priority="99999">

                <!-- "*#*#开头 #*#*结尾"的拨号 -->
                <action android:name="android.provider.Telephony.SECRET_CODE" />

                <data android:scheme="android_secret_code" />
            </intent-filter>
            <intent-filter>

                <!-- SD卡挂载、卸载 -->
                <action android:name="android.intent.action.MEDIA_MOUNTED" />
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
